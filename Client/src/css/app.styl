// app global css


// ——— Input ————————————————————————————————————


$q-field-color = #00c63b;

.q-field--focused {
  .q-field__label {
    color: $q-field-color !important;
  }

  .q-field__control {
    color: $q-field-color !important;
  }
}


// ——— Title ————————————————————————————————————


.q-title {
  padding: $flex-gutter-md 0;
  font-size: 1.3rem;
  line-height: unset;
  font-weight: 500;
  margin: 0;
}

.header-with-button {
  display: flex;
  flex-wrap: wrap;
  align-items: center;
  padding-top: $flex-gutter-md !important;
  padding-bottom: $flex-gutter-md !important;

  .q-title {
    flex-grow: 1;
    padding: 0 !important;
  }

  button {
    flex-grow: 0;
  }
}


// ——— Menus ————————————————————————————————————


.my-menu {

  .q-item {
    min-height: 40px;
  }

  .q-item__section--avatar {
    width: 28px !important;
    min-width: unset !important;
    padding: 0 !important;
    margin: 0 !important;

    .q-icon {
      font-size: 16px !important;
    }
  }

  .avatar-menu-item {
    .q-item__section--avatar {
      width: 40px !important;
    }

    .avatar {
      margin-left: -6px;
      margin-right: 11px;
      border-radius: 16px
      width: 32px;
      height: 32px;
    }
  }
}


// ——— Page paddings ————————————————————————————————————


.q-page {
  padding-bottom: $flex-gutter-xl !important;
}


$paddings = (12px 18px 24px)

page-paddings-block(size) {
  .page-padding {
    padding-right: size !important;
    padding-left: size !important;
  }

  .page-padding-right {
    padding-right: size !important;
  }

  .page-padding-left {
    padding-left: size !important;
  }

  .page-margin {
    margin-right: size !important;
    margin-left: size !important;
  }

  .page-padding-top {
    padding-top: size !important;
  }
}

@media ( max-width: 599px ) {
  page-paddings-block($paddings[0])
}

@media ( min-width: 600px ) and ( max-width: 1023px ) {
  page-paddings-block($paddings[1])
}

@media ( min-width: 1024px ) {
  page-paddings-block($paddings[2])
}


// ——— Elements ————————————————————————————————————


.center-form {
  width: 400px;
  display flex;
  flex-direction: column;
  justify-content: stretch;
}

.select-category {
  border: 1px solid rgba(0, 0, 0, 0.54) !important;
  font-weight: normal;

  .q-icon {
    color: rgba(0, 0, 0, 0.54) !important;
  }
}

.captcha-wait-msg {
  font-size: 0.8em;
  color: $negative;
}

.info-block {
  display: flex;

  span {
    display: inline-flex;
    margin-right: 10px;
    white-space: nowrap;
    align-items: center;

    .q-icon {
      margin-right: 6px;

      &:before {
        padding-top: 2px !important;
      }
    }

  }
}

.date-info-block {
  color: $grey-7;

  .q-icon {
    margin-right: 6px;

    &:before {
      padding-bottom: 2px !important;
    }
  }
}

.edit-btn-block {
  .q-icon {
    margin-right: 6px;

    &:before {
      padding-bottom: 2px !important;
    }
  }
}

.error {
  color: $negative;
  font-size: 12px;
  margin-top: 4px;
}

.q-notification__message {
  white-space: pre-wrap;
}

// ——— Extras ————————————————————————————————————


.clear {
  clear: both;
}

.word-break {
  word-break: break-all;
}

.middle {
  align-content: center;
  justify-content: center;
  align-items: center;
}


// ——— Fixes ————————————————————————————————————


.q-expansion-item--standard.q-expansion-item--expanded .q-expansion-item__border {
  opacity: 1 !important;
}


// ——— Material styles ————————————————————————————————————


.mat-hidden {
  .my-header, .my-header * {
    color: dimgrey !important;
  }

  * {
    color: silver !important;
  }

  .q-avatar {
    filter: grayscale(1)
  }
}

.mat-deleted {
  * {
    color: silver !important;
  }

  .my-header, .my-header * {
    color: maroon !important;
  }

  .q-avatar {
    filter: grayscale(1)
  }
}


// ——— Material styles ————————————————————————————————————


.material-text, .post-text, .comment-text {
  img {
    max-width: 100%;
  }
}


// ——— Site styles ————————————————————————————————————

@import '~src/site/styles';




